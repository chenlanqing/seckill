<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluefish.seckill.dao.OrderDao">

    <select id="getMiaoshaOrderByUserIdGoodsId" resultType="com.bluefish.seckill.model.MiaoshaOrder">
      select * from miaosha_order where user_id=#{userId} and goods_id=#{goodsId}
    </select>


    <insert id="insert" parameterType="com.bluefish.seckill.model.OrderInfo" useGeneratedKeys="true" keyProperty="id">
      insert into order_info(
          user_id,
          goods_id,
          goods_name,
          goods_count,
          goods_price,
          order_channel,
          status,
          create_date)
      values(
          #{userId},
          #{goodsId},
          #{goodsName},
          #{goodsCount},
          #{goodsPrice},
          #{orderChannel},
          #{status},
          #{createDate}
      )
    </insert>

    <insert id="insertMiaoshaOrder" parameterType="com.bluefish.seckill.model.MiaoshaOrder">
        insert into miaosha_order (user_id, goods_id, order_id)values(#{userId}, #{goodsId}, #{orderId})
    </insert>
</mapper>
